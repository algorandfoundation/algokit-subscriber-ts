{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "declarationDir": "./dist/types",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": ["index.ts", "examples/**/*.ts", "src/**/*.spec.ts", "tests/**/*.*"]
}
